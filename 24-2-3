import pytest
from app.calculator import Calculator


class TestCalc:
   def setup(self):
       self.calc = Calculator 

   def test_multiply_calculate_correctly(self):
       assert self.calc.multiply(self, 2, 2) == 4

   def test_multiply_failed(self):
  assert self.calc.multiply(self, 2, 2) == 5
  
  
  1. Метод сложения:
def test_addition_calculate_correctly(self):
    assert self.calc.addition(self, 3, 4) == 7


2. Метод вычитания:
def test_subtraction_calculate_correctly(self):
    assert self.calc.subtraction(self, 8, 3) == 5


3. Метод умножения:
def test_multiplication_calculate_correctly(self):
    assert self.calc.multiplication(self, 5, 2) == 10


4. Метод деления:
def test_division_calculate_correctly(self):
    assert self.calc.division(self, 10, 2) == 5


5. Метод возведения в степень:
def test_exponentiation_calculate_correctly(self):
    assert self.calc.exponentiation(self, 2, 3) == 8
